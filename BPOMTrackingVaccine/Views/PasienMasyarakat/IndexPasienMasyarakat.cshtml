
@{
    ViewBag.Title = "IndexPasienMasyarakat";
}

<style>
    #home {
        margin-bottom: 100px;
        box-sizing: border-box;
        color: black;
    }

    .table {
        background: #BBD2C5;
    }

    .table1 {
        border-radius: 20px;
    }
</style>

<div>
    <center>
        <h2 style="color:black"><b>Pengelolaan Data Vaksin</b></h2><hr />
    </center>
</div>

<div class="table col-md-12">
    <div class="table1">
        <br />
        <table id="produceTable" class="table table-striped table-bordered table" style="width:100%">
            <thead style="background: rgb(191,159,108); background: linear-gradient(0deg, rgba(191,159,108,1) 0%, rgba(111,142,120,1) 100%); color: black;">
                <tr>
                    <th>ID Vaksin</th>
                    <th>No Registrasi Vaksin</th>
                    <th>Status Vaksin Pasien</th>
                    <th>Produce by</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


<link href="//cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>

    <script>
            var Popup, dataTable;
            $(document).ready(function () {
                dataTable = $("#produceTable").DataTable({
                    "ajax": {
                        "url": "/PasienMasyarakat/GetData",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "idVaksin" },
                        { "data": "noRegVaksin" },
                        { "data": "statusVPasien" },
                        { "data": "idProdusen" }
                    ],
                    "language": {

                        "produceTable": "Invalid data, Please click <b>Add New</b> to adding"
                    }
                });
            });
    </script>
}


<hr />