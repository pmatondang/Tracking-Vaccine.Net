@model IEnumerable<ProduceTrackingVaccine.Models.produsen>
@{
    ViewBag.Title = "Home";
    string[] TableHeaders = new string[] {
        "ID Produsen",
        "Nama Produsen",
        "Alamat Produsen",
        "No Telepon"
    };
}
<!DOCTYPE HTML>
<html>
<head>
    <style>
        .styled-table {
            margin: 25px 0;
            font-family: sans-serif;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
            border-radius: 0.7em;
            width: 80%;
        }

            .styled-table thead tr {
                background-color: #009879;
                color: #ffffff;
                text-align: left;
                border-radius: 0.3em;
            }

            .styled-table th,
            .styled-table td {
                padding: 12px 15px;
                border-radius: 0.5em;
            }

            .styled-table tbody tr {
                border-bottom: 1px solid #dddddd;
            }

                .styled-table tbody tr:nth-of-type(even) {
                    background-color: #f3f3f3;
                }

                .styled-table tbody tr:last-of-type {
                    border-bottom: 2px solid #009879;
                }

                .styled-table tbody tr.active-row {
                    font-weight: bold;
                    color: #009879;
                }

        body {
            counter-reset: Count-Value;
        }

        table {
            border-collapse: separate;
        }

        tr td:first-child:before {
            counter-increment: Count-Value;
            content: counter(Count-Value);
        }

        body {
            width: 100%;
            font-family: "Myriad Pro","Helvetica Neue",Helvetica,Arial,Sans-Serif;
            background-color: #A9D0F5;
        }

        #header {
            width: 100%;
            margin: 0px auto;
            padding: 0px;
            text-align: center;
            height: 70px;
            line-height: 70px;
            background-color: #eff1f2;
        }

            #header li {
                display: inline-block;
                margin-right: 25px;
                font-size: 17px;
                color: #084B8A;
                font-weight: bold;
                cursor: pointer;
            }

            #header #site_name {
                text-align: left;
                width: 680px;
                font-size: 35px;
                margin-left: 20px;
            }

        #home {
            margin-top: 100px;
            box-sizing: border-box;
            color: black;
            background: #BBD2C5;
        }

        #contact {
            margin-top: 330px;
            width: 100%;
            height: 80px;
            padding: 30px;
            box-sizing: border-box;
            background-color: #eff1f2;
            border-radius: 0px;
            color: black;
        }

        #home h1 {
            font-size: 40px;
        }

        #home p p {
            font-size: 20px;
            text-align: left;
        }

        #contact input[type="text"] {
            width: 250px;
            height: 35px;
            padding-left: 10px;
            float: left;
            margin-left: 80px;
            border: none;
        }

        #contact textarea {
            float: left;
            width: 250px;
            height: 35px;
            margin-left: 20px;
            border: none;
            padding-left: 10px;
            padding-top: 10px;
        }

        #contact input[type="submit"] {
            float: left;
            margin-left: 20px;
            height: 35px;
            width: 100px;
            background: none;
            color: white;
            border: 1px solid white;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>ViewVaccine</title>
</head>
<body>
    <div id="title" class="jumbotron">
        <h1><b>Producer Access</b></h1><hr />
    </div><br />

    <div class="row">
        <div class="col-md-4">
            <img src="~/images/produsen.jpg" style="float:inherit; height:300px; width:500px;" alt="" class="img-responsive">
        </div>
        <div class="col-md-8">
            <p style="text-align:justify; font-size:17px;">
                <h2>Perusahaan Pembuat Vaksin Virus Corona - Halodoc</h2>
            <p><a class="btn btn-default" href="https://www.halodoc.com/artikel/ini-7-perusahaan-pembuat-vaksin-virus-corona">Read More &raquo;</a></p>
        </div>
        
    
    <div class="col-md-12"><br /><br />
        <div>
            <p style="font-size:15px; color:black"><h4>Berikut ini adalah daftar produsen yang melakukan produksi vaksin.</h4></p>
        </div>
        <center>
            <table style="" class="styled-table radius" border="0">
                <thead>
                    <tr>
                        <b>
                            <th><center>No</center></th>
                            @{
                                foreach (var head in TableHeaders)
                                {
                                    <th>
                                        <center>
                                            @head
                                        </center>
                                    </th>
                                }
                            }
                        </b>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td></td>
                            <td>
                                @item.idProdusen
                            </td>
                            <td>
                                @item.namaProdusen
                            </td>
                            <td>
                                @item.alamatProdusen
                            </td>
                            <td>
                                @item.noTelepon
                            </td>
                        </tr>
                    }
                        <!-- and so on... -->
                    </tbody>
                </table>
            </center>
        </div>
    </div><hr />
    </body>
</html>