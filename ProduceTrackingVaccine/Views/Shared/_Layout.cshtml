<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TrackingVaccine.com </title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <style>
        #home {
            background: #6f8d8e;
        }

        #title {
            background: linear-gradient(#D3CCE3, #E9E4F0)
        }
    </style>
</head>
<body style="background: #6f8d8e;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TrackingVaksin.com", "Home", "Produsen", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Home", "Produsen")</li>
                    <li>@Html.ActionLink("Vaksin", "Index", "Produsen")</li>
                    <li>@Html.ActionLink("Lapor Vaksin", "AddLaporan", "Produsen")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <center>
            <footer>
                <p>
                    &copy; @DateTime.Now.Year - D3TI19-04 | Pemrograman Teknologi .NET |
                    <a href="" target="_blank" style="color:black"><b>@Html.ActionLink("TrackingVaccine.com", "Home", "Produsen")</b></a>
                </p>
            </footer>
        </center>
    </div>

    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/notify.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>